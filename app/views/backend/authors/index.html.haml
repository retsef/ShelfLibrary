.row
  .col-lg-12
    %h1.page-header
      Authors
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        Authors
        .pull-right
          = link_to 'New', new_backend_author_path, class: 'btn btn-primary panel-btn'
      .panel-body
        .dataTable_wrapper
          %table#dataTables-example.table.table-striped.table-bordered.table-hover
            %thead
              %tr
                %th ID
                %th Name
                %th Surname
                %th
            %tbody
              - @authors.each do |author|
                %tr
                  %td
                    = author.id
                  %td
                    = author.name
                  %td
                    = author.surname
                  %td
                    = link_to 'Edit', edit_backend_author_path(author), class: 'btn btn-primary'
                    = link_to 'Delete', backend_author_path(author), confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger'

:javascript
  $(document).ready(function() {
      $('#dataTables-example').DataTable({
          responsive: true
      });
  });