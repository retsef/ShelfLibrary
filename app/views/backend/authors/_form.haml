.row
  .col-lg-12
    %h1.page-header
      Author
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        Author
      .panel-body
        .col-lg-12
          = simple_form_for([:backend, @author], html: { multipart: true, class: 'form-horizontal' }) do |form|
            = form.input :name
            = form.input :surname

            = form.submit class: 'btn btn-default'