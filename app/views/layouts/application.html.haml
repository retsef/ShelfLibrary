!!!
%html
  %head
    %title
      ShelfLibrary

    %link{href:'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel:'stylesheet', type:'text/css'}
    %link{href:'http://fonts.googleapis.com/css?family=Montserrat:400,700', rel:'stylesheet', type:'text/css'}
    %link{href:'http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic', rel:'stylesheet', type:'text/css'}

    %link{href: 'https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel: 'stylesheet'}

    = stylesheet_link_tag    'frontend/application', media: 'all', data: {'turbolinks-track': false}
    = javascript_include_tag 'frontend/application', data: {'turbolinks-track': false}
    = csrf_meta_tags

  %body.row-offcanvas.row-offcanvas-left{class: body_class}
    = render 'parts/header_top'
    .page-offcanvas
      = render 'parts/header'
      %main#main.container{role:'main'}
        = yield
      = render 'parts/footer'
